<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/grey"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/image_top_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/civ_profile_image"
                android:layout_width="@dimen/round_image_size"
                android:layout_height="@dimen/round_image_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:textColor="@color/light_grey"
                android:textSize="22sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_drawer"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_persons"
                style="@style/MenuStyle"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_person_selector" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_dob"
                style="@style/MenuStyle"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_dob_selector" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_address"
                style="@style/MenuStyle"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_map_selector" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_contact"
                style="@style/MenuStyle"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_phone_selector" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>